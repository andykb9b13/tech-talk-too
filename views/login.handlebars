{{> navbar}}
<section id="login-section" class="d-flex align-items-center">
  <div class="container d-flex justify-content-center text-white">
    <form class="d-flex flex-column justify-content-center align-items-center">
      <h1 class="h3 mb-3 fw-normal">Please Log In</h1>
      <div class="form-floating">
        <input
          type="email"
          class="form-control mb-4"
          id="email"
          placeholder="name@example.com"
        />
        <label for="floatingInput" class="text-dark">Email address</label>
      </div>
      <div class="form-floating">
        <input
          type="password"
          class="form-control mb-4"
          id="password"
          placeholder="Password"
        />
        <label for="floatingPassword" class="text-dark">Password</label>
      </div>

      <button class="btn btn-lg btn-outline-secondary text-white mb-4" type="submit" id="login-btn">Log in</button>
      <h5 class="mb-4">Not A User?</h5>
      <a href="/signup"  class="text-white">Sign Up</a>
    </form>
  </div>
</section>

<script src="/js/login.js"></script>